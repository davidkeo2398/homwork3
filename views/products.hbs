
<div class="container">
  <div class="row justify-content-md-center">
    {{#each newProducts}}
      <div class="col col-3">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">{{id}}</h5>
            <p class="card-text">{{name}}</p>
            <p class="card-text">$ {{price}}</p>
            <p class="card-text">{{category}}</p>
            <a href="#" onclick="handleClick({{id}})" id='goDetail' class="btn btn-primary">Go Detail</a>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>
<script >
  function handleClick(id){
    let btn = document.querySelector('#goDetail');
    btn.setAttribute("href",`/products/${id}`)
}
</script>

