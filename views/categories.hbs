<div class="container">
  <div class="row justify-content-md-center">
    {{#each categories}}
      <div class="col col-3">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">{{id}}</h5>
            <p class="card-text">{{category}}</p>
            <a
              href="#"
              onclick="handleClick({{id}})"
              id="goDetail"
              class="btn btn-primary"
            >Go Detail</a>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>